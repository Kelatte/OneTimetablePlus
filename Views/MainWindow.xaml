    <Viewbox>
        <Grid>
            <Grid Width="91.49" Height="871.2605042016806" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{Binding ShortTime}" Style="{StaticResource LargeText}" FontFamily="LatoBold" Margin="5"/>
                <StackPanel Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding TodayDayCourse.Courses}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Line X1="80" HorizontalAlignment="Center"
                                      StrokeThickness="2"
                                      Stroke="{StaticResource ForegroundLightBrush}"/>
                                    <TextBlock Text="{Binding ShowName}" Style="{StaticResource LargerText}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <StackPanel Grid.Row="3" Visibility="{Binding WeatherVisibility}" >
                    <TextBlock Text="明日天气预报" Style="{StaticResource SmallerText}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <resources:ChangeColorEffect/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Grid.Resources>

                        <Image Grid.Column="0" Source="{Binding WeatherInfo.IconDay, Converter={converters:IconIdToImageConverter}}"/>
                        <!--
                    <Image Grid.Column="0" >
                        <Image.Source>
                            <Binding>
                                <Binding.Path>
                                    WeatherInfo.IconNight
                                </Binding.Path>
                                <Binding.Converter>
                                    <converters:IconIdToImageConverter/>
                                </Binding.Converter>
                                <Binding.FallbackValue>
                                    <BitmapImage UriSource="/Assets/WeatherIcon/100.png"/>
                                </Binding.FallbackValue>
                            </Binding>
                        </Image.Source>
                    </Image>
                    -->
                        <Image Grid.Column="2" Source="{Binding WeatherInfo.IconNight, Converter={converters:IconIdToImageConverter}}"/>

                        <Line Grid.Column="1" Y1="35" VerticalAlignment="Center" HorizontalAlignment="Center"
                      StrokeThickness="1.5"
                      Stroke="{StaticResource ForegroundLightBrush}"/>
                    </Grid>
                    <TextBlock Text="{Binding TemperatureInfo}" Style="{StaticResource SmallerText}"/>

                    <!--<Image Grid.Column="0" Source="/OneTimetablePlus;component/Assets/WeatherIcon/100.png"/>
                <Image Grid.Column="2" Source="/OneTimetablePlus;component/Assets/WeatherIcon/100.png"/>-->
                </StackPanel>
            </Grid>

            <Grid Visibility="Collapsed">
                <ItemsControl>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="15:00" Style="{StaticResource MiddleText}"/>
                                <TextBlock Text="小雨 15°" Style="{StaticResource SmallText}"/>
                                <Line Margin="5" X1="80" HorizontalAlignment="Center"
                                      StrokeThickness="2"
                                      Stroke="{StaticResource ForegroundLightBrush}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
